{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "components/*": ["components/*"],
      "features/*": ["features/*"],
      "styles/*": ["styles/*"],
      "lib/*": ["lib/*"],
      "types/*": ["types/*"]
    },
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true
  }
}
